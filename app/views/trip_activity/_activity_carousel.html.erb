<div id="activity-card-carousel-<%=@carousel_id = @carousel += 1 %>" class="carousel slide">

  <div class="carousel-inner card-img-top activity" id="small-carousel">

    <% if activity.photos.length == 5 %>
      <div class="carousel-item active">
          <img src="<%= cl_image_path activity.photos[0].key %>" class="d-block" alt="activity-1">
      </div>
      <div class="carousel-item">
        <img src="<%= cl_image_path activity.photos[1].key %>" class="d-block" alt="activity-2">
      </div>
      <div class="carousel-item">
        <img src="<%= cl_image_path activity.photos[2].key %>" class="d-block" alt="activity-3">
      </div>
      <div class="carousel-item">
        <img src="<%= cl_image_path activity.photos[3].key %>" class="d-block" alt="activity-3">
      </div>
      <div class="carousel-item">
        <img src="<%= cl_image_path activity.photos[4].key %>" class="d-block" alt="activity-3">
      </div>

      <% else %>

        <div class="carousel-item active">
          <% case @trip.destination %>
            <% when "London" %>
              <%= image_tag("london.jpg", class: "d-block") %>
            <% when "Paris" %>
              <%= image_tag("paris.jpg", class: "d-block") %>
            <% when "Budapest" %>
              <%= image_tag("budapest.jpg", class: "d-block") %>
            <%when "Rome" %>
              <%= image_tag("rome.jpg", class: "d-block") %>
          <% end %>
        </div>

      <% end %>

    <button class="carousel-control-prev" data-bs-target="#activity-card-carousel-<%= @carousel_id %>" type="button"  data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
      </button>

    <button class="carousel-control-next" data-bs-target="#activity-card-carousel-<%= @carousel_id %>" type="button"  data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>

  </div>
</div>

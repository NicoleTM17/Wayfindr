<%= simple_form_for(@trip) do |f| %>
  <div class="trip-form"></div>
    <h3 class="p-3 text-center">Create  your trip</h3>
    <%= f.input :destination %>
    <%= f.input :number_pf_guests, input_html: {class: "form-control form-control-sm m-3 w-25"},class:"form-control", label: false, placeholder: "3" %>
    <%= f.input :start_date,
              as: :string,
              input_html: {class: 'm-3 w-100', data: {controller: "datepicker"}} %>
    <%= f.input :end_date,
              as: :string,
              input_html: {class: 'm-3 w-100', data: {controller: "datepicker"}} %>
    <%= f.submit class: "btn trip-btn m-3" %>
<% end %>

 <div class="modal-content">
  <%= simple_form_for(@trip) do |f| %>
        <%# <h1 class=" modal-title fs-5 " id="modalToggleLabel">Create your trip</h1> %>
      <div class="modal-header">
    <h3 class="p-3 text-center">Create  your trip</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <%= f.label :destination %>
      <%=f.text_field :destination, style: 'text-transform: capitalize;', class:"border-form w-100 mt-2" %>
    <%# <%= f.input :destination %><br>
    <%= f.label :number_of_guests, class:"mt-2 "%>
    <%= f.input :number_of_guests, input_html: {class: "form-control mt-2 w-25"},class:"form-control", label: false, placeholder: "3", collection: [1,2,3,4,5,'6+'] %>
    <%= f.input :start_date,
              as: :string,
              input_html: {data: {controller: "datepicker"}} %>
    <%= f.input :end_date,
              as: :string,
              input_html: {data: {controller: "datepicker"}} %>
    <%= f.input :categories, as: :check_boxes, collection: @categories, include_hidden: false %>
      </div>
      <div class="modal-footer">
    <%= f.submit "Go to activities", class: "btn btn-primary m-3" %>
        <button class="btn btn-primary d-none" data-bs-target="#selectActivitiesModal" data-bs-toggle="modal">Go to activities</button>
      </div>
<% end %>
    </div>
  <%# <div class="trip-form"></div> %>

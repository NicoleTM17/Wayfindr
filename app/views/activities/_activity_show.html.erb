<!-- Modal -->
<div class="modal fade" id="staticBackdrop<%= activity.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <button type="button" class="btn-close btn-x mt-3" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="modal-body">

      <!-- activity_show section -->
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= activity.website_url %>);">
          <div class="container">
          </div>
        </div>


        <div class="container">
          <h1 class="activity-name mt-3"> <%= activity.name %> </h1>
          <div class="info-card row mt-4">

            <div class="col-md-6 mb-2">
              <h3 class="mt-3"><i class="fa-solid fa-circle-info me-2"></i>About</h3>
              <p><%= activity.details %></p>
              <a class="btn btn-purple-border rounded" href="<%= activity.website_url %>" target=_blank>Visit the website</a>
            </div>

            <div class="col-md-6 mb-4 activity-details">

                <%# DO THIS AT SOME POINT <%= '⭐' * activity.rating %>
                <h4><strong class="ratings">Rating: <%= '⭐' * activity.rating %> </strong></h4>

            </div>

            <div class="activity-details">
              <h6 class="lh-lg"><strong>Category: </strong>
              <% case activity.activity_type %>
              <% when "Museums" %>
                <i class="fa-solid fa-landmark" style="color:#925CFF"></i>
              <% when "Parks" %>
                <i class="fa-solid fa-tree" style="color:#925CFF"></i>
              <% when "Sights" %>
                <i class="fa-solid fa-binoculars" style="color:#925CFF"></i>
              <% when "Restaurants" %>
                <i class="fa-solid fa-utensils" style="color:#925CFF"></i>
              <% when "walking+tours" %>
                <i class="fa-solid fa-person-walking" style="color:#925CFF"></i>
            <%# ADD EXTRA CATEGORIES HERE %>
              <% end %>
              </h6>


              <h6 class="lh-lg"><i class="fa-solid fa-map-location"></i><strong> Address: </strong><%= activity.address %></h6>
              <h6 class="lh-lg"><i class="fa-solid fa-location-dot"></i><strong> Location: </strong><%= activity.location %></h6>
              <h6 class="lh-lg"><i class="fa-solid fa-phone"></i><strong> Telephone number: </strong><%= activity.phone_number %></h6>
              <h6 class="lh-lg"><i class="fa-solid fa-clock"></i><strong> Opening hours: </strong><p class="lh-lg"><%= activity.opening_hours.join(" , \n") %></p></h6>
            </div>
            <%# <div class="mb-3"></div> %>
          </div>
        </div>





      </div>
    </div>
  </div>
</div>

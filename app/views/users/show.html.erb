<div class="container profile-header mt-2 p-2" style="text-align: left;">

  <div class="user-full-info">
    <div><%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large", alt: "dropdown menu" %> </div>

    <div class="user-info px-3">
      <h1>Hello <%= @user.username%></h1>
      <p class="my-1"><%= @user.first_name.capitalize%> <%= @user.last_name.capitalize %></p>
      <p><%= @user.email %></p>
    </div>
  </div>

  <div class="profile-map">
    <%= render "map" %>
  </div>

</div>

<div class="container">


  <div class="profile-container my-5">

    <div class="trips-container">
      <div>
        <h3 class="m-3">Your upcoming trips:</h3>
      </div>
      <div class="upcoming-trips">
        <%= render "trips", locals: {trips: @trips} %>
        <%= render "new_trip" %>
      </div>
    </div>

  </div>

    <div class="profile-container my-5">

    <div class="trips-container">
      <div>
        <h3 class="m-3">Your past trips:</h3>
      </div>
      <div class="upcoming-trips">
        <%= render "past_trips", locals: {trips: @trips} %>
      </div>
    </div>
  </div>

</div>
